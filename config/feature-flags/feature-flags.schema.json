{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "icontrol://schemas/feature-flags.schema.json",
  "title": "GovernedFeatureFlags",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "flags": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9_.-]+$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean" },
            "owner": { "type": "string", "minLength": 2 },
            "justification": { "type": "string", "minLength": 5 },
            "expires_on": { "type": "string", "format": "date" },
            "risk": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH"] }
          },
          "required": ["enabled", "owner", "justification", "expires_on", "risk"]
        }
      }
    }
  },
  "required": ["schema_version", "flags"]
}
