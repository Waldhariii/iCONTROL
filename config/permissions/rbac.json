{
  "version": "1.0",
  "roles": ["USER", "ADMIN", "SYSADMIN", "DEVELOPER"],
  "rules": [
    { "who": "DEVELOPER", "can": ["*"] },
    { "who": "SYSADMIN", "can": ["read:*", "write:admin", "write:user", "toggle:safe_mode", "view:selfcheck", "view:developer"] },
    { "who": "ADMIN", "can": ["read:*", "write:user"] },
    { "who": "USER", "can": ["read:dashboard", "read:account", "read:own_data"] }
  ],
  "constraints": [
    "Admins cannot modify SYSADMIN/DEVELOPER permissions.",
    "SYSADMIN cannot modify DEVELOPER permissions.",
    "Only DEVELOPER can enable/disable complementary modules."
  ]
}
