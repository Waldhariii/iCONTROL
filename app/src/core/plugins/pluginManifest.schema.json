{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "icontrol.pluginManifest.schema.json",
  "title": "iCONTROL Plugin Contract Manifest (PCM)",
  "type": "object",
  "additionalProperties": false,
  "required": ["plugin_id", "version", "type", "capabilities", "limits", "fallback", "safety", "sla"],
  "properties": {
    "plugin_id": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-z0-9_\\-\\.]+$"
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": ["core_free", "paid_accelerator"]
    },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_qps", "max_monthly_cost_usd"],
      "properties": {
        "max_qps": { "type": "integer", "minimum": 1, "maximum": 100000 },
        "max_monthly_cost_usd": { "type": "integer", "minimum": 0, "maximum": 100000 }
      }
    },
    "fallback": {
      "type": "object",
      "additionalProperties": false,
      "required": ["provider", "data_loss"],
      "properties": {
        "provider": { "type": "string", "minLength": 3 },
        "data_loss": { "type": "boolean" }
      }
    },
    "safety": {
      "type": "object",
      "additionalProperties": false,
      "required": ["writes_allowed", "pii_exposure", "blast_radius"],
      "properties": {
        "writes_allowed": { "type": "boolean" },
        "pii_exposure": { "type": "string", "enum": ["none", "redacted", "raw"] },
        "blast_radius": { "type": "string", "enum": ["global", "per_tenant", "per_module"] }
      }
    },
    "sla": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_latency_ms", "availability_pct"],
      "properties": {
        "max_latency_ms": { "type": "integer", "minimum": 1, "maximum": 600000 },
        "availability_pct": { "type": "number", "minimum": 0, "maximum": 100 }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
