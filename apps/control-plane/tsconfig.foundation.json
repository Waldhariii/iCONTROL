{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": [
      "node"
    ],
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "isolatedModules": false
  },
  "include": [
    "src/core/ports/**/*",
    "src/core/tenant/**/*",
    "src/platform/observability/**/*",
    "src/platform/runtimeConfig/**/*",
    "src/platform/audit/**/*",
    "src/platform/guards/**/*",
    "src/platform/routing/**/*",
    "src/platform/smoke/**/*"
  ],
  "exclude": [
    "src/__tests__/**/*",
    "src/ui-v2/**/*",
    "src/ui-v2-mockups/**/*",
    "src/ui/**/*",
    "src/pages/**/*",
    "src/surfaces/**/*",
    "src/policies/**/*",
    "src/platform/tenantOverrides/**/*",
    "src/platform/write-gateway/**/*",
    "src/localAuth.ts",
    "src/core/subscription/**/*",
    "src/core/onboarding/**/*",
    "src/core/studio/**/*",
    "src/core/ports/cpSurfaceEnforcement.ts",
    "node_modules",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
