{
  "name": "icontrol-app",
  "private": true,
  "version": "0.2.0-rc.1",
  "description": "iCONTROL â€” Core UI Shell and Module Host",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:app": "VITE_APP_KIND=APP vite build",
    "build:cp": "VITE_APP_KIND=CONTROL_PLANE vite build",
    "build:ui": "npm run -s build:app && npm run -s build:cp",
    "dev": "vite --port 5173 --strictPort",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0 --ignore-path .eslintignore",
    "preview": "vite preview",
    "server:smoke": "node ../platform/api/smoke-runtime-config.mjs",
    "test": "VITE_APP_KIND=APP vitest",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "dev:app": "VITE_APP_KIND=APP vite",
    "dev:cp": "VITE_APP_KIND=CONTROL_PLANE vite",
    "cp:guard": "bash ./tools/scripts/guard-cp-no-inline-styles.sh",
    "cp:test": "VITE_APP_KIND=APP vitest --run",
    "gate:cp": "npm run -s cp:bundle:verify && npm run -s cp:devonly:verify && npm run -s cp:guard && npm run -s cp:test",
    "cp:devonly:doc": "node tools/scripts/gen-devonly-routes-doc.mjs",
    "cp:devonly:verify": "node tools/scripts/gen-devonly-routes-doc.mjs --check",
    "cp:report": "bash tools/scripts/cp-compliance-report.sh",
    "cp:bundle": "bash tools/scripts/build-cp-bundle.sh",
    "cp:bundle:verify": "bash tools/scripts/verify-cp-bundle.sh",
    "cp:bundle:extract": "bash tools/scripts/extract-cp-bundle.sh",
    "cp:release:gen": "node tools/scripts/gen-cp-release-notes.mjs",
    "cp:release:gate": "npm run -s cp:rc:verify && npm run -s cp:bundle && npm run -s cp:bundle:verify && npm run -s cp:bundle:extract && npm run -s cp:bundle:verify && npm run -s cp:devonly:verify && npm run -s cp:guard && npm run -s cp:test && npm run -s cp:export || true",
    "cp:rc:verify": "bash tools/scripts/rc-freeze-verify.sh",
    "gate:no-cross-page-imports": "bash ../scripts/gates/gate-no-cross-page-imports.sh",
    "gate:no-direct-writes": "bash ../scripts/gates/gate-no-direct-writes.sh",
    "gate:tenant-scoping": "bash ../scripts/gates/gate-tenant-scoping.sh",
    "gate:no-inline-styles": "bash ../scripts/gates/gate-no-inline-styles.sh",
    "validate:isolation": "npm run gate:no-cross-page-imports && npm run gate:no-direct-writes && npm run gate:tenant-scoping && npm run gate:no-inline-styles",
    "verify:ssot": "bash tools/verify-ssot.sh full",
    "verify:ssot:fast": "bash tools/verify-ssot.sh fast",
    "preflight": "npm run verify:ssot:fast"
  },
  "dependencies": {
    "dompurify": "^3.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jsdom": "^27.4.0",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  }
}
