# iCONTROL — Environment Example
# Copy to .env.local (do not commit secrets)
# UI shell
VITE_APP_NAME=iCONTROL
VITE_DEFAULT_LOCALE=fr
VITE_ENABLE_TELEMETRY=0

# Auth (local bootstrap only for now)
VITE_AUTH_MODE=local
VITE_SESSION_TTL_MIN=720
# Local bootstrap users (dev only). Example JSON array or object.
VITE_BOOTSTRAP_USERS=[{"username":"admin","password":"CHANGE_ME","role":"SYSADMIN"}]

# Platform (future)
VITE_API_BASE_URL=http://localhost:8080
VITE_STORAGE_PROVIDER=local   # local|s3|gdrive|dropbox|sharepoint (future)
VITE_OCR_PROVIDER=local       # local|cloud (future)

# --- Branding (optional) ---
VITE_APP_DISPLAY_NAME=iCONTROL
VITE_APP_SHORT_NAME=iCONTROL
VITE_LEGAL_NAME=iCONTROL
VITE_TENANT_ID=icontrol-default
VITE_TITLE_SUFFIX=— Gestion PME
VITE_THEME_MODE=dark
VITE_ACCENT_COLOR=#6D28D9
VITE_LOGO_PRIMARY=
VITE_LOGO_COMPACT=
