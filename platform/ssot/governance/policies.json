[
  {
    "id": "policy:platform.write",
    "name": "Platform Write",
    "effect": "allow",
    "actions": [
      "studio.pages.edit",
      "studio.routes.edit",
      "studio.nav.edit",
      "studio.releases.publish",
      "studio.releases.activate",
      "studio.releases.rollback",
      "studio.delete",
      "studio.pages.view",
      "studio.routes.view",
      "studio.nav.view",
      "studio.releases.view",
      "observability.read",
      "data.export"
    ],
    "scopes": [
      "platform:*"
    ],
    "conditions": {
      "surface": "cp"
    }
  },
  {
    "id": "policy:platform.release",
    "name": "Platform Release",
    "effect": "allow",
    "actions": [
      "studio.releases.publish",
      "studio.releases.activate",
      "studio.releases.rollback",
      "observability.read",
      "data.export"
    ],
    "scopes": [
      "platform:*"
    ],
    "conditions": {}
  },
  {
    "id": "policy:breakglass",
    "name": "Break Glass",
    "effect": "allow",
    "actions": [
      "breakglass.request",
      "breakglass.approve",
      "breakglass.disable"
    ],
    "scopes": [
      "platform:*"
    ],
    "conditions": {}
  },
  {
    "id": "policy:integrations",
    "name": "Integrations",
    "effect": "allow",
    "actions": [
      "integrations.webhook.in",
      "integrations.webhook.out",
      "integrations.read"
    ],
    "scopes": [
      "tenant:*"
    ],
    "conditions": {}
  },
  {
    "id": "policy:ops",
    "name": "Ops Control Plane",
    "effect": "allow",
    "actions": [
      "ops.incident.create",
      "ops.incident.read",
      "ops.runbook.execute",
      "ops.runbook.apply",
      "ops.timeline.read",
      "ops.action.qos.throttle",
      "ops.action.qos.shed",
      "ops.action.release.rollback",
      "ops.action.extension.killswitch",
      "ops.action.change.freeze",
      "ops.action.integration.disable",
      "ops.action.open.break_glass",
      "ops.action.close.break_glass"
    ],
    "scopes": [
      "platform:*"
    ],
    "conditions": {}
  }
]
