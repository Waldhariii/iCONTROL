{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "iCONTROL Brand Schema v1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "APP_DISPLAY_NAME": { "type": "string", "minLength": 1, "maxLength": 64 },
    "APP_SHORT_NAME":   { "type": "string", "minLength": 1, "maxLength": 32 },
    "LEGAL_NAME":       { "type": "string", "minLength": 1, "maxLength": 128 },
    "TENANT_ID":        { "type": "string", "minLength": 3, "maxLength": 64, "pattern": "^[a-z0-9][a-z0-9\\-]+$" },
    "TITLE_SUFFIX":     { "type": "string", "maxLength": 64 },
    "THEME_MODE":       { "type": "string", "enum": ["dark","light","auto"] },
    "ACCENT_COLOR":     { "type": "string", "pattern": "^#([0-9a-fA-F]{6}|[0-9a-fA-F]{8})$" },
    "LOGO_PRIMARY":     { "type": "string" },
    "LOGO_COMPACT":     { "type": "string" }
  },
  "required": ["APP_DISPLAY_NAME","TENANT_ID","THEME_MODE","ACCENT_COLOR"]
}
