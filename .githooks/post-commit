#!/bin/zsh
set -euo pipefail

ROOT="$(cd "$(dirname "$0")/.." && pwd)"

# Post-commit hygiene:
# - refresh _REPORTS/INDEX.md after any commit
# - DO NOT auto-commit (avoid commit loops / noise)
# - keep developer in control

"$ROOT/scripts/maintenance/rebuild-reports-index.zsh" >/dev/null 2>&1 || true
exit 0
