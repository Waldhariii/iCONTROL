{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "security_secret_ref.v1",
  "title": "security_secret_ref",
  "type": "object",
  "required": [
    "id",
    "provider",
    "ref",
    "kind",
    "created_at",
    "created_by",
    "constraints"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {"type": "string"},
    "provider": {"type": "string", "enum": ["env", "file", "vault", "kms"]},
    "ref": {"type": "string"},
    "kind": {
      "type": "string",
      "enum": ["hmac_key", "ed25519_priv", "api_token", "oauth_client", "encryption_key"]
    },
    "created_at": {"type": "string", "format": "date-time"},
    "created_by": {"type": "string"},
    "constraints": {
      "type": "object",
      "required": ["no_export", "redact", "max_ttl_days", "rotation_policy_id"],
      "additionalProperties": false,
      "properties": {
        "no_export": {"type": "boolean"},
        "redact": {"type": "boolean"},
        "max_ttl_days": {"type": "integer", "minimum": 1},
        "rotation_policy_id": {"type": "string"}
      }
    }
  }
}
