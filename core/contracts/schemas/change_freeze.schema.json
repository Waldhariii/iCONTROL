{
  "$id": "change_freeze.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "enabled",
    "scope",
    "reason",
    "enabled_at",
    "enabled_by",
    "allow_actions",
    "scopes"
  ],
  "properties": {
    "enabled": { "type": "boolean" },
    "scope": { "type": "string", "minLength": 1 },
    "reason": { "type": "string", "minLength": 1 },
    "enabled_at": { "type": "string", "format": "date-time" },
    "enabled_by": { "type": "string", "minLength": 1 },
    "scopes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["content_mutations", "studio_ui_mutations"],
      "properties": {
        "content_mutations": { "type": "boolean" },
        "studio_ui_mutations": { "type": "boolean" }
      }
    },
    "allow_actions": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    }
  }
}
