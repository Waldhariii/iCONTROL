{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "webhook.v1",
  "title": "webhook",
  "type": "object",
  "required": ["webhook_id", "tenant_id", "connector_id", "direction"],
  "additionalProperties": false,
  "properties": {
    "webhook_id": {"type": "string"},
    "tenant_id": {"type": "string"},
    "connector_id": {"type": "string"},
    "direction": {"type": "string", "enum": ["inbound", "outbound"]},
    "target_url": {"type": "string"},
    "signature_required": {"type": "boolean"},
    "signature_header": {"type": "string"},
    "secret_ref_id": {"type": "string"},
    "retry_policy": {
      "type": "object",
      "properties": {
        "max_attempts": {"type": "number"},
        "base_delay_ms": {"type": "number"},
        "max_delay_ms": {"type": "number"}
      },
      "additionalProperties": false
    },
    "dlq_enabled": {"type": "boolean"},
    "export_type": {"type": "string"},
    "data_model_id": {"type": "string"}
  }
}
