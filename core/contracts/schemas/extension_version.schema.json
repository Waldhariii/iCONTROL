{
  "$id": "extension_version.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["extension_id", "version", "checksum", "signature", "manifest_fragment_ref", "status", "hooks"],
  "properties": {
    "extension_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "checksum": { "type": "string" },
    "signature": { "type": "string" },
    "manifest_fragment_ref": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["draft", "released"] },
    "hooks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["event", "handler", "params"],
        "properties": {
          "event": { "type": "string", "minLength": 1 },
          "handler": { "type": "string", "minLength": 1 },
          "params": { "type": "object" }
        }
      }
    }
  }
}
