{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nav_manifest.v1",
  "title": "nav_manifest",
  "type": "object",
  "required": ["release_id", "nav_specs", "nav_instances"],
  "additionalProperties": false,
  "properties": {
    "release_id": {"type": "string"},
    "nav_specs": {"type": "array", "items": {"type": "object"}},
    "nav_instances": {"type": "array", "items": {"type": "object"}},
    "sections_by_page": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["section_key"],
          "properties": {
            "section_key": {"type": "string"},
            "title_key": {"type": "string"},
            "order": {"type": "integer"}
          },
          "additionalProperties": false
        }
      }
    }
  }
}
